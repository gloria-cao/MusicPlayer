/* components/song-item-v1/song-item-v1.wxss */
.song {
  display: flex;
  margin: 30rpx 0;
  background-color: #ffffff;
  border-radius: 10rpx;
  align-items: center;
}
.image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 12rpx;
}
.info {
  margin-left: 20rpx;
  line-height: 60rpx;
}
.singer {
  color: #666666;
  font-size: 24rpx;
}
.arrow {
  color: #888888;
  position: absolute;
  right: 36rpx;
}