/* components/nav-bar/nav-bar.wxss */
/* 自定义导航栏 */
.nav {
  display: flex;
  height: 44px;
  color: #ffffff;
}
.left, .center, .right {
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav .left, .nav .right {
  width: 120rpx;
}

.nav .center {
  flex: 1;
}

/* 控制标题内容显示 */
.default {
  display: none;
}
.slot:empty + .default {
  display: flex;
}